<div class="row">
  <div class="col-md-5 text-center">
    <h2>Burgers Not Yet Eaten!</h2>

    <ul>
      {{#each burgers}} {{#unless eaten}} {{> burgers/burger-block eaten=true}} {{/unless}} {{/each}}
    </ul>

  </div>


  <div class="col-md-2">
 
  </div>

  <div class="col-md-5 text-center">
    <h2>Burgers Thoroughly Consumed!</h2>

    <ul>
      {{#each burgers}} {{#if eaten}} {{> burgers/burger-block eaten=false}} {{/if}} {{/each}}
    </ul>

  </div>
</div>



<div class="row">
  <div class="col-med-12 text-center">
    <div class="burgerformbox center-block">
    <h2>Add-a-Burgermatic</h2>
    <form class="create-form">

      <div class="form-group">
        <label for="ca">Burger Name</label>
        <input type="text" id="ca" class="form-control" name="name">
      </div>

      <button class="btn btn-warning" type="submit">ADD BURGER</button>
    </form>
</div>
  </div>

</div>